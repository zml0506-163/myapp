# ============================================
# 数据库配置
# ============================================
DB_URL=sqlite+aiosqlite:///./pubmed_app.db
# DB_URL=mysql+aiomysql://user:password@localhost:3306/pubmed_db

# ============================================
# 文件存储配置
# ============================================
UPLOAD_DIR=./uploads
PDF_DIR=./storage/pdfs
MAX_UPLOAD_SIZE=31457280
USE_HASH_SHARDING=true
TEMP_FILE_CLEANUP_DAYS=7

# ============================================
# NCBI API 配置
# ============================================
NCBI_TOOL=pubmed_app
NCBI_EMAIL=your_email@example.com
NCBI_API_KEY=your_ncbi_api_key_here

# ============================================
# LLM 配置（通义千问）
# ============================================
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# ============================================
# 日志配置
# ============================================
# 日志级别：DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# 日志文件目录
LOG_DIR=./logs

# 是否输出到控制台（生产环境建议false，开发环境true）
LOG_CONSOLE=true

# 是否输出到文件（生产环境建议true）
LOG_FILE=true

# 控制台是否使用彩色输出（仅Windows/Linux终端支持）
LOG_COLOR=false

# ============================================
# 检索配置
# ============================================
MAX_SEARCH_RESULTS=5
MAX_PMIDS_TO_FETCH=20
MAX_SUCCESSFUL_DOWNLOADS=5
MAX_CONCURRENT_DOWNLOADS=3
SEARCH_MULTIPLIER=3

# ============================================
# 超时配置（秒）
# ============================================
PDF_DOWNLOAD_TIMEOUT=60
PDF_EXTRACT_TIMEOUT=30
WEBVIEW_TIMEOUT=90
PDF_DOWNLOAD_MAX_RETRIES=1
